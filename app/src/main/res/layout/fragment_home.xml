<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/background_color"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


            </androidx.appcompat.widget.Toolbar>


            <ImageView
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:layout_marginEnd="36dp"
                app:layout_constraintEnd_toEndOf="@+id/toolbar"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_notifications_24" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <LinearLayout
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        app:srcCompat="@drawable/ic_search" />

                    <TextView
                        android:id="@+id/textView49"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="Search for your product"
                        android:textColor="@color/non_editable_text"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>


            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="20sp"
                app:fillColor="@color/dark_blue"
                app:indicatorMarginVertical="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll"
                app:pageColor="@color/grey"
                app:radius="4dp"
                app:slideInterval="3000"
                app:strokeWidth="1dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/notification"
                app:layout_constraintTop_toTopOf="@+id/notification"
                app:srcCompat="@drawable/ic_baseline_brightness_1_24" />

            <FrameLayout
                android:id="@+id/frameLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:background="@color/background_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/carouselView">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textStyle="bold"
                    android:text="Browse Categories"
                    android:textColor="@color/primary_text_color"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingRight="10dp"
                    app:srcCompat="@drawable/ic_baseline_navigate_next_24" />

            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/background_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="0dp"
                        android:scrollbars="none"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">


                            <androidx.cardview.widget.CardView

                                android:id="@+id/milk_packet"
                                android:layout_width="213dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:orientation="vertical"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"

                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <androidx.cardview.widget.CardView

                                        android:id="@+id/suggested_image_frame1"
                                        android:background="@color/grey"
                                        android:layout_width="213dp"
                                        android:layout_height="120dp">

                                        <ImageView
                                            android:id="@+id/image1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            android:src="@drawable/amul_pack"/>
                                    </androidx.cardview.widget.CardView>


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="7dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginRight="7dp"
                                            android:layout_marginBottom="10dp"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/sug_top_topicname1"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_marginBottom="10dp"
                                                android:fontFamily="@font/alice"
                                                android:text="Milk Packet"
                                                android:textColor="@color/primary_text_color"
                                                android:textSize="14dp" />

                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/milk_tetra"
                                android:layout_width="213dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackgroundBorderless"
                                android:orientation="vertical"

                                app:cardCornerRadius="10dp"
                                app:cardElevation="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"

                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/suggested_image_frame2"
                                        android:layout_width="213dp"
                                        android:background="@color/grey"
                                        android:layout_height="120dp">

                                        <ImageView
                                            android:id="@+id/image2"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            android:src="@drawable/amul_tetra" />
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="7dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginRight="7dp"
                                            android:layout_marginBottom="10dp"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/sug_top_topicname2"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_marginBottom="10dp"
                                                android:fontFamily="@font/alice"
                                                android:text="Milk Tetra Pack"
                                                android:textColor="@color/primary_text_color"
                                                android:textSize="14dp" />

                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>



                        </LinearLayout>

                    </HorizontalScrollView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
